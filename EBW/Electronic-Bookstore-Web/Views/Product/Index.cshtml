@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black text-primary">Avaible Cover Type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-journal-plus"></i> &nbsp; Add new Product
            </a>
        </div>
    </div>
    <br />

    <table id="productTable" class="table table-bordered table-hover" style="width:100%;margin:auto">
        <thead>
            <tr class="table-info">
                <th>Title</th>
                <th>ISBN</th>
                <th>List Price</th>
                <th>Price</th>
                <th>Category</th>
                <th>Cover Type</th>
                <th>Author</th>
                <th></th>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}